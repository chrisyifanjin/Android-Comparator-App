<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
            android:text="Current Job"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/currentJob" tools:layout_editor_absoluteY="181dp"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="currentJobButtonClicked"/>
    <Button
            android:text="Job Offer"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/jobOffer" tools:layout_editor_absoluteY="181dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="jobOfferButtonClicked"/>

    <Button
        android:id="@+id/comparisonSetting"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:onClick="comparisonSettingButtonClicked"
        android:text="Comparison Setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentJob" />
    <Button
            android:text="Job Comparison"
            android:layout_width="150dp"
            android:layout_height="150dp" android:id="@+id/jobComparison"
            app:layout_constraintTop_toBottomOf="@+id/jobOffer"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:onClick="jobComparisionButtonClicked"/>


</androidx.constraintlayout.widget.ConstraintLayout>
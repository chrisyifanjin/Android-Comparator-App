<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobOffer">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="25dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:inputType="textPersonName"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    android:text="Title"
                    android:ems="10"
                    android:id="@+id/title"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/titleEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    android:text="Company"
                    android:ems="10"
                    android:id="@+id/company"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/companyEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    android:text="Location"
                    android:ems="10"
                    android:id="@+id/location"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/locationEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="227dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="Cost of living in the location"
                    android:focusableInTouchMode="false"
                    android:ems="10"
                    android:id="@+id/cost"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/costEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="Yearly salary"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:id="@+id/salary"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/salaryEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:focusableInTouchMode="false"
                    android:text="Yearly bonus"
                    android:ems="10"
                    android:id="@+id/bonus"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/bonusEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="Retirement benefits"
                    android:focusableInTouchMode="false"
                    android:ems="10"
                    android:id="@+id/benefits"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/benefitsEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="Relocation stipend"
                    android:focusableInTouchMode="false"
                    android:ems="10"
                    android:id="@+id/stipend"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/stipendEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <EditText
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="Restricted stock unit award"
                    android:focusableInTouchMode="false"
                    android:ems="10"
                    android:id="@+id/award"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/awardEdit" android:layout_weight="1"
                    android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:showDividers="middle"
                android:divider="@drawable/empty_divider">
            <Button
                    android:text="Reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/reset" android:layout_weight="1"
                    android:background="#03A9F4"
                    android:onClick="resetButtonClicked"/>
            <Button
                    android:text="Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/save" android:layout_weight="1"
                    android:background="#03A9F4"
                    android:onClick="saveButtonClicked"/>
            <Button
                    android:text="Job Comparison"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/jobComparison" android:layout_weight="1"
                    android:background="#03A9F4"
                    android:onClick="jobComparisionButtonClicked"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layoutTable"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Title"/>

                <TextView
                        android:id="@+id/firstT"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondT"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Company"/>

                <TextView
                        android:id="@+id/firstC"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondC"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView7"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Location"/>

                <TextView
                        android:id="@+id/firstL"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondL"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView10"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Yearly Salary"/>

                <TextView
                        android:id="@+id/firstYS"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondYS"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView13"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Yearly Bonus"/>

                <TextView
                        android:id="@+id/firstYB"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondYB"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView16"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Retirement Benefits"/>

                <TextView
                        android:id="@+id/firstRB"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondRB"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView19"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Relocation Stipend"/>

                <TextView
                        android:id="@+id/firstRS"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondRS"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textView22"
                        android:layout_width="143dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Restricted Stock Unit Award"/>

                <TextView
                        android:id="@+id/firstRSU"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>

                <TextView
                        android:id="@+id/secondRSU"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="TextView"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
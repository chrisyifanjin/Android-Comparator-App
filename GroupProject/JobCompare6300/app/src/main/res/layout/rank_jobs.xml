<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Job Offer Ranking"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="34sp"
            android:textStyle="bold">

    </TextView>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaa"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="222dp" android:id="@+id/recycleView"/>
    <Button
            android:text="Compare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/compare"
            android:background="#03A9F4"
            android:onClick="compareButtonClicked"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/layoutTable">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Title"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView3" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstT" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondT" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Company"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView4" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstC" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondC" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Location"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView7" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstL" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondL" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Yearly Salary"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView10" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstYS" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondYS" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Yearly Bonus"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView13" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstYB" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondYB" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Retirement Benefits"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView16" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstRB" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondRB" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Relocation Stipend"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView19" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstRS" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondRS" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:text="Restricted Stock Unit Award"
                    android:layout_width="143dp"
                    android:layout_height="40dp" android:id="@+id/textView22" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/firstRSU" android:layout_weight="1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/secondRSU" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

